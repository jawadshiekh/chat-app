generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id           Int            @id @default(autoincrement())
  username     String?
  phoneNumber  String         @unique
  otp          String?
  avatar       String?
  bio          String?        @default("Hey there, i am using Krlete hain")
  createdAt    DateTime       @default(now())
  otpCreatedAt DateTime?
  refreshToken String?
  Participants Participants[]
  Messages     Messages[]
}

model Chats {
  id           Int            @id @default(autoincrement())
  name         String?
  icon         String?
  type         ChatType
  Participants Participants[]
  Messages     Messages[]
}

model Participants {
  id     Int   @id @default(autoincrement())
  chatId Int
  userId Int
  user   Users @relation(fields: [userId], references: [id])
  chat   Chats @relation(fields: [chatId], references: [id])
}

model Messages {
  id        Int      @id @default(autoincrement())
  chatId    Int
  senderId  Int
  content   String
  fileId    Int?
  createdAt DateTime @default(now())
  chat      Chats    @relation(fields: [chatId], references: [id])
  sender    Users    @relation(fields: [senderId], references: [id])
  file      Files?   @relation(fields: [fileId], references: [id])
}

model Files {
  id        Int        @id @default(autoincrement())
  file      String
  filename  String
  mimeType  String
  size      Float
  createdAt DateTime   @default(now())
  Messages  Messages[]
}

enum ChatType {
  private
  group
}
